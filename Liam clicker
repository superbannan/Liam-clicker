// game.js

let score = 0;
let clickValue = 1;
let upgrades = {
    person1: { cost: 50, multiplier: 1 },
    person2: { cost: 150, multiplier: 2 },
    person3: { cost: 500, multiplier: 5 },
};

function incrementScore() {
    score += clickValue;
    updateScore();
}

function updateScore() {
    document.getElementById("score").innerText = score;
    document.getElementById("click-value").innerText = clickValue;
}

function buyUpgrade(person) {
    if (score >= upgrades[person].cost) {
        score -= upgrades[person].cost;
        clickValue += upgrades[person].multiplier;
        upgrades[person].cost *= 2; // Increase the cost for future purchases
        alert(`You bought ${person}! Your points per click is now ${clickValue}`);
        updateScore();
    } else {
        alert("You don't have enough points to buy this upgrade.");
    }
}
